def MeasureDistance(USidpos):
    #return 1.00
    print(USidpos)
    ser = serial.Serial('COM9')
    time.sleep(5)
    while True:
        line = str(ser.readline(),'utf-8')
        line = line.strip("\r\n")
        listData = line.split(",")    
        print("line=",listData)
        return listData[USidpos]

